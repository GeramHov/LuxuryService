{% extends 'base.html.twig' %}

{% block title %}Offers index{% endblock %}

{% block body %}
    <h1>Offers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>Description</th>
                <th>Title</th>
                <th>Type</th>
                <th>Location</th>
                <th>Salary</th>
                <th>CreatingDate</th>
                <th>ClosingDate</th>
                <th>Activity</th>
                <th>Notes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr>
                <td>{{ offer.id }}</td>
                <td>{{ offer.reference }}</td>
                <td>{{ offer.description }}</td>
                <td>{{ offer.title }}</td>
                <td>{{ offer.type }}</td>
                <td>{{ offer.location }}</td>
                <td>{{ offer.salary }}</td>
                <td>{{ offer.creatingDate ? offer.creatingDate|date('Y-m-d') : '' }}</td>
                <td>{{ offer.closingDate ? offer.closingDate|date('Y-m-d') : '' }}</td>
                <td>{{ offer.activity ? 'Yes' : 'No' }}</td>
                <td>{{ offer.notes }}</td>
                <td>
                    <a href="{{ path('app_offers_show', {'id': offer.id}) }}">show</a>
                    <a href="{{ path('app_offers_edit', {'id': offer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_offers_new') }}">Create new</a>
{% endblock %}
