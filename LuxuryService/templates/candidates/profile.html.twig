{% extends 'base.html.twig' %}

{% block title %}
    Luxury Services recruitment & services
{% endblock %}

{% block stylesheets %}
    <link href="../../public/css/main.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="base">

    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Your profile</h2>
                        <span class="white-text">Personnal & Professionnal informations</span>
                        <ol class="breadcrumb">
                            <li><a href="#!">Home</a></li>
                            <li class="active">Profile</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>


        <!-- Page Content-->
        <section class="gray-bg">
            <div class="container">
                <div class="row">
                    <div class="score-container">
                        <h4>
                            <img src="https://i.imgur.com/s9bPVaK.gif" style="height: 80px; width: 201px;"> &nbsp;
                            &nbsp; Hooray ! Your profile is complete.
                        </h4>
                        <div class="c100 p100 small complete ">
                            <span>100%</span>
                            <div class="slice">
                                <div class="bar"></div>
                                <div class="fill"></div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </section>

    <div class="container">
        <form action="{{ path('app_candidates_save', {'id': app.user.id}) }}" method="post" style="padding-top: 20px; padding-bottom: 80px">

            <label for="gender">Gender:</label>
                <select name="gender" id="gender" style="display: block">
                    <option value="male" selected>Mr</option>
                    <option value="female">Ms</option>
                </select>
            
            <label for="firstname">Firstname:</label>
            <input type="text" name="firstname" value="{{ candidates.firstname ? candidates.firstname : '' }}">
    
            <label for="lastname">Lastname:</label>
            <input type="text" name="lastname" value="{{ candidates.lastname ? candidates.lastname : '' }}">

            <label for="address">Address:</label>
            <input type="text" name="address" value="{{ candidates.address ? candidates.address : '' }}">

            <label for="country">Country:</label>
            <input type="text" name="country" value="{{ candidates.country ? candidates.country : '' }}">

            <label for="nationality">Nationality:</label>
            <input type="text" name="nationality" value="{{ candidates.nationality ? candidates.nationality : '' }}">

            <label for="current_location">Current Location:</label>
            <input type="text" name="current_location" value="{{ candidates.currentLocation ? candidates.currentLocation : '' }}">

            <label for="birthdate">Birthdate:</label>
            <input type="date" name="birthdate" value="{{ candidates.birthdate ? candidates.birthdate : '' }}">
            
            <label for="birth_location">Birthplace :</label>
            <input type="text" name="birth_location" value="{{ candidates.birthLocation ? candidates.birthLocation : '' }}">

            <label for="experience">Experience:</label>
            <select name="experience" id="experience" style="display: block">
                <option value="0-6 months">0 to 6 months</option>
                <option value="6 months-1 year ">6 months to 1 year</option>
                <option value="1-2 year">1 to 2 years</option>
                <option value="2+ years">2+ years</option>
                <option value="5+ years">5+ years</option>
                <option value="10+ years">10+ years</option>
            </select>

            <label for="job_category">Job Category:</label>
            <select name="job_category" id="experience" style="display: block">
                {% for category in job_category %}
                <option value="{{ category.id }}">{{category.name}}</option>
                {% endfor %}
            </select>

            <label for="short_description">Short Description:</label>
            <input type="placeholder" name="short_description" value="{{ candidates.shortDescription ? candidates.shortDescription : '' }}" style="width: 100%; height: 15vh"> <br>

            <label for="resume">Résumé:</label>
            <input type="file" name="firstname" value="">

            <label for="profile_image">Upload Your Photo:</label>
            <input type="file" name="profile_image" value="">

            <label for="passport">Passport:</label>
            <input type="file" name="passport" value="">

            <label for="passport_file">Upload Your Passport:</label>
            <input type="file" name="passport_file" value="">

            <label for="file">Upload a File:</label>
            <input type="file" name="file" value="">

            <input type="hidden" name="user_id" value="{user_id here}">

            <div class="text-center">
                <button type="submit" class="btn gradient secondary waves-effect waves-light page-scroll">create / update</button>
            </div>
        </form>
    </div>

    </div>

</div>
{% endblock %}

{% block script %}
<script type="text/javascript">

    onAppReady(function() {
        $('.preload').remove();
    });
</script>
{% endblock %}