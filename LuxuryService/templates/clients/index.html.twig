{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}

{% block body %}
    <h1>Clients index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>ActivityType</th>
                <th>JobType</th>
                <th>ContactName</th>
                <th>ContactEmail</th>
                <th>ContactTel</th>
                <th>Notes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.name }}</td>
                <td>{{ client.activityType }}</td>
                <td>{{ client.jobType }}</td>
                <td>{{ client.contactName }}</td>
                <td>{{ client.contactEmail }}</td>
                <td>{{ client.contactTel }}</td>
                <td>{{ client.notes }}</td>
                <td>
                    <a href="{{ path('app_clients_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('app_clients_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_clients_new') }}">Create new</a>
{% endblock %}
